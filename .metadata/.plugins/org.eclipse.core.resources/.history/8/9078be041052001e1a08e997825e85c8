package banking.array;

import java.util.Scanner;

public class BankMain {
	static Account[] account = new Account[100];
	static Scanner scanner = new Scanner(System.in);

	public static void main(String[] args) {
		boolean sw = true;
		
		while(sw) {
			System.out.println("==================================================");
			System.out.println("1. 계좌 생성 | 2. 계좌 목록 | 3. 예금 | 4. 출금 | 5. 종료");
			System.out.println("==================================================");
			
			//메뉴 선택
			int selectNo = Integer.parseInt(scanner.nextLine());
			
			if(selectNo == 1) {
				createAccount();
			}else if(selectNo == 2) {
				getAccountList();
			}else if(selectNo == 3) {
				
			}else if(selectNo == 4) {
				
			}else if(selectNo == 5) {
				sw = false;
			}else {
				System.out.println("지원되지 않는 기능입니다. 다시 입력해 주세요.");
			}
		} // while 끝
		System.out.println("프로그램 종료.");

	} // Main 끝
	
	private static void createAccount() {
		System.out.println("---------------------------------------");
		System.out.println("계좌 생성");
		System.out.println("---------------------------------------");
		
		System.out.println("계좌 번호: ");
		String ano = scanner.nextLine();
		
		System.out.println("예금주: ");
		String owner = scanner.nextLine();
		
		System.out.println("초기 입금액: ");
		int balance = Integer.parseInt(scanner.nextLine());
		
		account[0] = new Account(ano, owner, balance); // 연습 데이터 1개 생성
		
	}
	
	// 계좌 목록
	private static void getAccountList() {
		System.out.println("---------------------------------------");
		System.out.println("                계좌 목록                ");
		System.out.println("---------------------------------------");
		
		System.out.print("계좌 번호: " + account[0].getAno() + "\t");
		System.out.print("예금주: " + account[0].getOwner() + "\t");
		System.out.println("잔고: " + account[0].getBalance());
	}

}
