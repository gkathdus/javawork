package tramsport;

public class Main {

	public static void main(String[] args) {
		Person p1 = new Person("김태형", 10000);
		Person p2 = new Person("전정국", 20000);
		
		// 버스 객체 생성
		Bus bus100 = new Bus(100);
		Bus bus5531 = new Bus(5531);
		
		// 지하철 객체 생성
		Subway biue = new Subway("1호선");
		
		p1.takeBus(bus100);
		p2.takeBus(bus100);
		p1.takeBus(bus5531);
		p2.takeBus(bus5531);
		
		p1.takeSubway(biue);
		p2.takeSubway(biue);
		
		// 정보 출력
		p1.showPersonInfo();
		p2.showPersonInfo();
		System.out.println("==============================");
		bus100.showBusInfo();
		bus5531.showBusInfo();
		biue.showSubwayInfo();
		

	}

}
