package reference.subject2;

import reference.subjects.Subject;

public class Student {
	private int studentId;
	private String studentName;
	private Subject[] Subjects;
	
	public Student(int studentId, String studentName) {
		this.studentId = studentId;
		this.studentName = studentName;
		subjects = new Subject[10];
		
	}
	
	// 과목 추가
	public void addSubject(String name, int score) {
		Subject subject = new Subject();
		subject.setSubjectName("수학");
		subject.setScorePoint(100);
		
		// 과목을 배열에 저장
		// subjects[0] = subject; // 1개 저장
		for(int i = 0; i < subjects.length; i++) {
			if(subject[i] == null) {
			subjects[i] = subject;
			break;
			}
		}
	}
	// 학생 정보를 출력
	public void showStudentInfo() {
		for(int i = 0; i < subjects.length; i++) {
			if(subjects[i] != null) {
				Subject subject = subject[i];
				System.out.println("학생" + studentName + "의" + subject);
				subject.getSubjectName() + "점수는" + subject.getScorePoint() + "점입니다.");
			}
		}

	}

}
