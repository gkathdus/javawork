package Classes;

// 참조(래퍼런스) 자료형
public class Student { // 설계도
	// 클래스 내부에서는 변수를 필드라고 함(필드 - field)
	String name; // 학생 이름("함소연")
	int studentid; // 학번(101)
	int grade; // 학년
	
	//  학생의 정보를 출력하는 메서드(함수) 정의
	public void showStudentInfo( ) {
		System.out.println("이름: " + name + 
				", 학번: " + studentid + ", 학년: " + grade);
	}
	

}
