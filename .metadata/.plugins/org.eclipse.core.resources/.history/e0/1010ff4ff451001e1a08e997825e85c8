package customers;

public class VIPCustomer extends Customer {
	private int agentId;
	double saleRatio;
	
	public VIPCustomer() {
		customerGrade = "VIP";
		saleRatio = 0.1;
		bonusRatio = 0.05;
	}
	
	public void setAgentId(int agentId) {
		this.agentId = agentId;
	}

	@Override
	public String showCustomerInfo() {
		return super.showCustomerInfo() + "\n전문 상담원 ID는 "
		+ agentId + "입니다.";
	}
	

}
