package Classes.constructor.copy;

// 참조 자료형 - Person 클래스 정의
public class Person {
	String name;  // 사람의 이름
	float height; // 키
	float weight; // 몸무게
	
	// 기본 생성자
	public Person() {}
	
	// 매개변수 있는 생성자
	public Person(String n) {
		name = n; // 외부에서 입력된 이름을 저장
	}	
		// 매개변수 있는 생성자(모든 필드)
	public Person(String n, float h, float w) {
			name = n; // 외부에서 입력된 이름을 저장
			height = h; // 외부에서 입력한 키
			weight = w; // 외부에서 입력한 몸무게
	}
	
	// 메서드
	public void showPersonInfo() {
		System.out.printf("이름: %s, 키: %f, 몸무게: %f\n", 
				name, height, weight);
	}

}
